<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                            android:layout_height="match_parent">

    <ImageView
            android:layout_width="120dp"
            android:layout_height="140dp" tools:srcCompat="@tools:sample/avatars[14]"
            android:id="@+id/detialImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/plateEditText"
            app:layout_constraintStart_toEndOf="@+id/detialImageView" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/detialImageView"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:focusedByDefault="false" android:focusableInTouchMode="false" android:selectAllOnFocus="false"
            android:defaultFocusHighlightEnabled="false"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/colorEditText"
            app:layout_constraintStart_toEndOf="@+id/detialImageView"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:focusedByDefault="false" android:focusableInTouchMode="false" android:selectAllOnFocus="false"
            android:defaultFocusHighlightEnabled="false" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/modelEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/modelEditText"
            app:layout_constraintStart_toEndOf="@+id/detialImageView"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:focusedByDefault="false" android:focusableInTouchMode="false" android:selectAllOnFocus="false"
            android:defaultFocusHighlightEnabled="false" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/makeEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/makeEditText"
            app:layout_constraintStart_toEndOf="@+id/detialImageView"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:focusedByDefault="false" android:focusableInTouchMode="false" android:selectAllOnFocus="false"
            android:defaultFocusHighlightEnabled="false" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/regionEditText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/regionEditText" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/plateEditText"
            app:layout_constraintStart_toEndOf="@+id/detialImageView"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:importantForAutofill="no"
            android:focusedByDefault="false" android:focusableInTouchMode="false" android:selectAllOnFocus="false"
            android:defaultFocusHighlightEnabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>