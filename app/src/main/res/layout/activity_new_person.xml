<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addnewface.AddNewFaceActivity">

    <ImageView
            android:src="@drawable/ic_take_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addNewPersonImageView" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/newNameEditText"
            android:scaleType="fitCenter"/>

    <Button
            android:text="Add New Person"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/newNameEditText" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addButton" android:hint="Full Name"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/personIDTextView"
            app:layout_constraintEnd_toEndOf="@+id/newNameEditText"
            app:layout_constraintStart_toStartOf="@+id/newNameEditText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/newNameEditText" android:hint="Person ID"/>

</androidx.constraintlayout.widget.ConstraintLayout>